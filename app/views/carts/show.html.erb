<div class="food-cart">
  <%= render "food_cart" %>
</div>
<div class="cart-customer-info">
<%= form_for @order do |f| %>
	  <div class="input-group">
		  <div class="form-group">
		  	<label for="customer_name">Customer Name:</label>
		    <%= f.text_field :customer_name, class: "form-control" %>
		  </div>
		  <div class="form-group">
			  <label for="customer_phone_number">Customer Phone Number:</label>
			  <%= f.text_field :customer_phone_number, class: "form-control" %>
		  </div>
		  <div class="form-group">
			  <label for="customer_address">Customer Address:</label>
		      <%= f.text_field :customer_address, class: "form-control" %>
		  </div>
		  <div class="form-group">
			  <label for="customer_email">Customer Email:</label>
		      <%= f.text_field :customer_email, class: "form-control" %>
		  </div>

		  <div class="form-group-btn">
		    <%= f.submit "Create Order", class: "btn btn-primary" %>
		  </div>
	  </div>
	<% end %>
</div>
  <%= link_to "go back", food_items_path %>

